html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script.
            function like(){
                window.location.href= 'next' + '?'+ 'preference=like&' + 'id_movie=' + #{movie.id};//Non capisco perch√® utilizzi come prefisso /api/db??
            }
            function dislike(){
                window.location.href= 'next' + '?'+ 'preference=dislike&' + 'id_movie=' + #{movie.id};
            }
            function end(){
                window.location.href= 'end';
            }
        title Movie Card
    body 
        div Sessione attuale: #{id_session}
        h1 #{movie.title}
        h3 #{movie.overview}
        p  #{movie.rating}
        img(src= config.images.base_url + config.images.backdrop_sizes[0] + movie.poster_path)
        br
        p Fai la tua scelta #{username}
        button(name="like", onclick="like()") Like 
        button(name="dislike", onclick="dislike()") Dislike 
        button(name="end", onclick="end()") End 
