html(lang="en")
    head
        meta(charset="UTF-8")
        meta(http-equiv="X-UA-Compatible", content="IE=edge")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        script.
            function inizializza(){
                localStorage.setItem("id_movie", #{movie.id});
                localStorage.setItem("prefix_poster_path", "#{config.images.base_url}" + "#{config.images.backdrop_sizes[0]}");
            }
        script
            include ./jQuery.js  
            include ./script.js
        title Movie Card
    body(onload="inizializza()", id="body") 
        div Sessione attuale: #{id_session}
        h1(id="title")= movie.title
        h3(id="overview")= movie.overview
        p(id="rating")= movie.rating
        div(id="poster")
            img(src= config.images.base_url + config.images.backdrop_sizes[0] + movie.poster_path)
        br
        p Fai la tua scelta #{username}
        button(name="like", onclick="like()") Like 
        button(name="dislike", onclick="dislike()") Dislike 
        button(name="end", onclick="end()") End